<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/make_meme_from_camera"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:src="@drawable/photocamera"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingRight="40dp"
            android:text="Shoot your own"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10000000">

    </View>

    <LinearLayout
        android:id="@+id/make_meme_from_gallery_button"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:src="@drawable/pictures"
             />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingRight="40dp"
            android:text="Get from gallery"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10000000">

    </View>

    <LinearLayout
        android:id="@+id/make_meme_popular_image_button"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:src="@drawable/photo"
             />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingRight="40dp"
            android:text="Use popular memes"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10000000">

    </View>
</LinearLayout>